@model List<HotelManagASP.Models.Chambre>

@{
    ViewData["Title"] = "Index";
}

<style>

.container {
    margin-top: 20px;
}


.col-6 {
    background-color: #f8f9fa; 
    border: 1px solid #ddd;   
    border-radius: 10px;      
    padding: 15px;
    margin-bottom: 40px;      
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}


.col-6:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
}


.col-6 img {
    display: block;
    margin: 0 auto 10px; 
    border-radius: 5px;  
    max-width: 100%;
}


.col-6 h4 {
    font-size: 1.5rem;
    margin-bottom: 10px;
    color: #333;
}


.col-6 p, .col-6 h6 {
    margin: 5px 0;
    color: #555;
}


.col-6 button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

.col-6 button:hover {
    background-color: #0056b3;
}



</style>
<div class="container">

    <div class="row">

        @foreach(var item in Model)
        {
            <div class="col-6">
                
                <div>
                    <h4>Chambre @item.type_Chambre</h4>
                </div>
               
                    <div>
                    <h4><img src="@item.ImageUrl" width=200px></h4>
                </div>

                <div>
                    <p>Capasité : @item.Capacite personne(s)</p>
                </div>
                <div>
                    <h6>Prix : @item.Prix DH</h6>
                </div>

                <div>
                    <h6>Description : @item.Description </h6>
                    </div>

                <button>
                    <a asp-action="Reserver" asp-controller="Reservation" asp-route-chambreId="@item.id"
                       style="color: white; text-decoration: none;">
                        Réserver maintenant
                    </a>
                </button>
            </div>

        }

    </div>

</div>