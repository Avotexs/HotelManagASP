@model List<HotelManagASP.Models.Chambre>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row">

        @foreach(var item in Model)
        {
            <div class="col-6">
                
                <div>
                    <h4>Chambre @item.type_Chambre</h4>
                </div>
               
                    <div>
                    <h4><img src="@item.ImageUrl" width=200px></h4>
                </div>

                <div>
                    <p>Capasité : @item.Capacite personne(s)</p>
                </div>
                <div>
                    <h6>Prix : @item.Prix DH</h6>
                </div>

                <div>
                    <h6>Description : @item.Description </h6>
                    </div>

                <button>Reserver maintenant</button>
            </div>

        }

    </div>

</div>